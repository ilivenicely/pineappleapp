<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_color_background"
    tools:context="com.paneapple.paneapple.students.Student_SignUp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/paneapple_first_color"
            app:layout_scrollFlags="scroll|enterAlways">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Student Signup"
                android:textColor="@color/white_color"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/back_white_icon"
                android:layout_marginLeft="5dp"
                android:layout_gravity="left"
                android:layout_marginRight="@dimen/_5ssp"
                android:id="@+id/back_login_screen_id"
                />
        </android.support.v7.widget.Toolbar>

    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:src="@drawable/add_image_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_3sdp"
        android:id="@+id/user_signup_registration_profile"
        />
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/white_color"
            card_view:cardCornerRadius="10dp"
            android:layout_marginTop="@dimen/_1sdp"
            card_view:cardElevation="5dp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            card_view:cardUseCompatPadding="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:hint="First Name"
                    android:textColorHint="@color/black_color"
                    android:fontFamily="@font/montserrat_regular"
                    >
                    <EditText
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="@dimen/_99sdp"
                        android:layout_height="@dimen/_33sdp"
                        android:textColorHint="@color/black_color"
                        android:scrollbars="vertical"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/black_color"
                        android:inputType="textPersonName"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textSize="@dimen/_12ssp"
                        android:paddingRight="@dimen/_5ssp"
                        android:backgroundTint="@color/paneapple_first_color"
                        android:outlineSpotShadowColor="@color/paneapple_second_color"
                        android:id="@+id/user_signup_registration_first_name_id"
                        />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:hint="L Name"
                    android:textColorHint="@color/black_color"
                    android:gravity="right"
                    android:layout_marginLeft="@dimen/_120sdp"
                    android:layout_gravity="right"
                    >
                    <EditText
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_33sdp"
                        android:textColorHint="@color/black_color"
                        android:scrollbars="vertical"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="@color/black_color"
                        android:inputType="textPersonName"
                        android:textSize="@dimen/_12ssp"
                        android:paddingRight="@dimen/_5ssp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:backgroundTint="@color/paneapple_first_color"
                        android:drawableRight="@drawable/person_icon"
                        android:id="@+id/user_signup_registration_last_name_id"
                        android:outlineSpotShadowColor="@color/paneapple_second_color"
                        />
                </android.support.design.widget.TextInputLayout>
                </RelativeLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="Email"
                    android:textColorHint="@color/black_color"
                    android:fontFamily="@font/montserrat_regular"
                    >
                    <EditText
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/user_signup_registration_email_id"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_33sdp"
                        android:textColorHint="@color/black_color"
                        android:scrollbars="vertical"
                        android:textColor="@color/black_color"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/_12ssp"
                        android:paddingRight="@dimen/_5ssp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:backgroundTint="@color/paneapple_first_color"
                        android:drawableRight="@drawable/email_small_icon"
                        android:outlineSpotShadowColor="@color/paneapple_second_color"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="Password"
                    android:textColorHint="@color/black_color"
                    android:focusable="false"
                    >
                    <com.subhrajyoti.passwordview.PasswordView
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36ssp"
                        android:textColorHint="@color/paneapple_third_color"
                        android:textColor="@color/black_color"
                        android:paddingLeft="@dimen/_10ssp"
                        android:textSize="@dimen/_12ssp"
                        android:inputType="textPassword"
                        android:layout_marginTop="@dimen/_10ssp"
                        android:paddingRight="@dimen/_10ssp"
                        app:eyeTint="@color/paneapple_first_color"
                        android:id="@+id/user_signup_registration_password"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:passwordToggleTint="@color/paneapple_first_color"
                        android:backgroundTint="@color/paneapple_first_color"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="City"
                    android:textColorHint="@color/black_color"
                    android:fontFamily="@font/montserrat_regular"
                    >
                    <EditText
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_33sdp"
                        android:textColorHint="@color/black_color"
                        android:scrollbars="vertical"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="@color/black_color"
                        android:id="@+id/user_signup_registration_city"
                        android:textSize="@dimen/_12ssp"
                        android:paddingRight="@dimen/_5ssp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:backgroundTint="@color/paneapple_first_color"
                        android:drawableRight="@drawable/flag_icon"
                        android:outlineSpotShadowColor="@color/paneapple_second_color"
                        />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="Student Age"
                    android:textColorHint="@color/black_color"
                    android:fontFamily="@font/montserrat_regular"
                    >
                    <EditText
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_33sdp"
                        android:textColorHint="@color/black_color"
                        android:scrollbars="vertical"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/_12ssp"
                        android:id="@+id/user_signup_registration_age"
                        android:paddingRight="@dimen/_5ssp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:backgroundTint="@color/paneapple_first_color"
                        android:drawableRight="@drawable/age_icon"
                        android:outlineSpotShadowColor="@color/paneapple_second_color"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGNUP"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/white_color"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_light"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/user_signup_registration_textview_id"

            />
    </LinearLayout>

