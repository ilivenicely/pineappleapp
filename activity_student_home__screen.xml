<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paneapple.paneapple.students.Student_Home_Screen">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white_gray_color"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/paneapple_second_color"
            app:layout_scrollFlags="scroll|enterAlways">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/white_color"
                android:textSize="@dimen/_13ssp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                />
        </android.support.v7.widget.Toolbar>
    </RelativeLayout>
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            card_view:cardBackgroundColor="@color/white_color"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="0dp"
            android:layout_column="0"
            card_view:cardUseCompatPadding="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_85sdp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/paneapple_background_logo"
            android:id="@+id/student_profile_id_home"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abubakar"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/paneapple_first_color"
            android:layout_marginTop="@dimen/_95sdp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/_12ssp"
            android:id="@+id/student_username_id_home"
            />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_biography"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            card_view:cardBackgroundColor="@color/white_color"
            card_view:cardCornerRadius="2dp"
            android:layout_marginLeft="@dimen/_15ssp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            card_view:cardElevation="0dp"
            android:layout_column="0"
            card_view:cardUseCompatPadding="true">
        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/paneapple_card_image"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/_5sdp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biography"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/montserrat_light"
                android:textColor="@color/paneapple_first_color"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_3sdp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="here is biography and details"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/montserrat_light"
                android:layout_marginLeft="@dimen/_49sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_10sdp"
                />



        </android.support.v7.widget.CardView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2"
            >
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_ups_expert"
                android:layout_width="170dp"
                android:layout_height="165dp"
                card_view:cardBackgroundColor="@color/white_color"
                card_view:cardCornerRadius="5dp"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_5sdp"
                card_view:cardElevation="0dp"
                android:layout_column="0"
                card_view:cardUseCompatPadding="true">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_gravity="center"
                    android:id="@+id/ups_expert_drawable"
                    android:src="@drawable/chat_icon"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chats"
                    android:textAlignment="center"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:textColor="@color/black_color"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_"
                android:layout_width="170dp"
                android:layout_height="160dp"
                card_view:cardBackgroundColor="@color/white_color"
                card_view:cardCornerRadius="5dp"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_5sdp"
                card_view:cardElevation="0dp"
                android:layout_column="1"
                card_view:cardUseCompatPadding="true">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:id="@+id/wiring_drawable"
                    android:src="@drawable/star_icon"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Students"
                    android:textAlignment="center"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:textColor="@color/black_color"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_viw_"
                android:layout_width="170dp"
                android:layout_height="160dp"
                card_view:cardBackgroundColor="@color/white_color"
                card_view:cardCornerRadius="5dp"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_10ssp"
                card_view:cardElevation="0dp"
                android:layout_column="0"
                card_view:cardUseCompatPadding="true">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="190dp"
                    android:id="@+id/ac_drawable"
                    android:src="@drawable/folder_icon"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Activity"
                    android:textAlignment="center"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:textColor="@color/black_color"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_eletronic"
                android:layout_width="170dp"
                android:layout_height="160dp"
                card_view:cardBackgroundColor="@color/white_color"
                card_view:cardCornerRadius="5dp"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_10ssp"
                card_view:cardElevation="0dp"
                android:layout_column="1"
                card_view:cardUseCompatPadding="true">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:id="@+id/electronic_drawable"
                    android:paddingTop="@dimen/_5sdp"
                    android:src="@drawable/comments_icon"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:textAlignment="center"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:textColor="@color/black_color"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    />
            </android.support.v7.widget.CardView>
        </GridLayout>

    </LinearLayout>
    </ScrollView>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigationview_id"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        app:itemIconTint="@color/paneapple_first_color"
        app:itemTextColor="@color/paneapple_first_color"
        app:menu="@menu/menu"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>