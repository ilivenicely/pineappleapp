<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white_color"
    android:orientation="vertical"
    tools:context="com.paneapple.paneapple.tutor.Login_Home_Screen">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/paneapple_first_color"
            app:layout_scrollFlags="scroll|enterAlways">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/_55ssp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_horizontal"
                android:text="Tutor Login"
                android:textColor="@color/paneapple_third_color"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_290sdp"
        android:background="@drawable/gradient_color_background"
        android:orientation="vertical"></RelativeLayout>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:gravity="center_horizontal"
        card_view:cardBackgroundColor="@color/white_color"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Email"
            android:textColorHint="@color/black_color"

            >

            <EditText
                android:id="@+id/student_login_username_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_33sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/paneapple_first_color"
                android:drawableRight="@drawable/email_small_icon"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="textEmailAddress"
                android:outlineSpotShadowColor="@color/paneapple_second_color"
                android:paddingRight="@dimen/_5ssp"
                android:scrollbars="vertical"
                android:textColor="@color/black_color"
                android:textColorHint="@color/black_color"
                android:textSize="@dimen/_12ssp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_70sdp"
            android:focusable="false"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Password"
            android:textColorHint="@color/black_color">

            <com.subhrajyoti.passwordview.PasswordView
                android:id="@+id/student_login_password_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36ssp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10ssp"
                android:backgroundTint="@color/paneapple_first_color"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_10ssp"
                android:paddingRight="@dimen/_10ssp"
                android:textColor="@color/black_color"
                android:textColorHint="@color/paneapple_third_color"
                android:textSize="@dimen/_12ssp"
                app:eyeTint="@color/paneapple_first_color"
                app:passwordToggleTint="@color/paneapple_first_color"

                />

        </android.support.design.widget.TextInputLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_350sdp"
        android:orientation="vertical">

        <Button
            android:id="@+id/login_btn_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/gradient_color_background"
            android:fontFamily="@font/montserrat_light"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white_color"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/test_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_light"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/_5sdp"
                android:text="Don't have an account ?"
                android:textColor="@color/black_color" />

            <TextView
                android:id="@+id/sign_up_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_light"
                android:paddingTop="@dimen/_5sdp"
                android:text="Signup"
                android:textColor="@color/paneapple_first_color" />


        </RelativeLayout>
    </LinearLayout>


</FrameLayout>