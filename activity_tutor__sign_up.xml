<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paneapple.paneapple.tutor.Tutor_SignUp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_color_background"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/paneapple_first_color"
        app:layout_scrollFlags="scroll|enterAlways">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tutor_signup"
            android:textColor="@color/white_color"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_white_icon"
            android:layout_marginLeft="5dp"
            android:layout_gravity="left"
            android:layout_marginRight="@dimen/_5ssp"
            android:id="@+id/back_login_screen_id"
            />
    </android.support.v7.widget.Toolbar>
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_pencil_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/_40sdp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_95sdp"
        android:layout_height="@dimen/_95sdp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/add_image_icon"
        android:layout_marginTop="-10dp"
        android:paddingTop="-5dp"
        android:id="@+id/tutor_signup_registration_profile_id"
        />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/white_color"
            card_view:cardCornerRadius="10dp"
            android:layout_marginTop="@dimen/_5sdp"
            card_view:cardElevation="5dp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            card_view:cardUseCompatPadding="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="First Name"
                android:textColorHint="@color/black_color"
                android:fontFamily="@font/montserrat_regular"

                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:textColorHint="@color/black_color"
                    android:scrollbars="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/black_color"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"
                    android:paddingRight="@dimen/_5ssp"
                    android:backgroundTint="@color/paneapple_first_color"
                    android:drawableRight="@drawable/person_icon"
                    android:outlineSpotShadowColor="@color/paneapple_second_color"
                    android:id="@+id/tutor_signup_registration_first_name_id"
                    />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="Last Name"
                android:textColorHint="@color/black_color"
                android:fontFamily="@font/montserrat_regular"

                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:textColorHint="@color/black_color"
                    android:scrollbars="vertical"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="@color/black_color"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_12ssp"
                    android:paddingRight="@dimen/_5ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:backgroundTint="@color/paneapple_first_color"
                    android:drawableRight="@drawable/person_icon"
                    android:id="@+id/tutor_signup_registration_last_name_id"
                    android:outlineSpotShadowColor="@color/paneapple_second_color"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="Email"
                android:textColorHint="@color/black_color"
                android:fontFamily="@font/montserrat_regular"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:textColorHint="@color/black_color"
                    android:scrollbars="vertical"
                    android:id="@+id/tutor_signup_registration_email_id"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="@color/black_color"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_12ssp"
                    android:paddingRight="@dimen/_5ssp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:backgroundTint="@color/paneapple_first_color"
                    android:drawableRight="@drawable/email_small_icon"
                    android:outlineSpotShadowColor="@color/paneapple_second_color"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="Password"
                android:textColorHint="@color/black_color"
                android:focusable="false"
                android:fontFamily="@font/montserrat_regular"

                >
                <com.subhrajyoti.passwordview.PasswordView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36ssp"
                    android:textColorHint="@color/paneapple_third_color"
                    android:textColor="@color/black_color"
                    android:paddingLeft="@dimen/_10ssp"
                    android:textSize="@dimen/_12ssp"
                    android:inputType="textPassword"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:paddingRight="@dimen/_10ssp"
                    android:fontFamily="@font/montserrat_regular"
                    app:eyeTint="@color/paneapple_first_color"
                    android:id="@+id/tutor_signup_registration_password_login_id"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:passwordToggleTint="@color/paneapple_first_color"
                    android:backgroundTint="@color/paneapple_first_color"
                    />
            </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:hint="City"
                    android:textColorHint="@color/black_color"
                    android:fontFamily="@font/montserrat_regular"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_33sdp"
                        android:textColorHint="@color/black_color"
                        android:scrollbars="vertical"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/_12ssp"
                        android:paddingRight="@dimen/_5ssp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:id="@+id/tutor_signup_registration_city_id"
                        android:backgroundTint="@color/paneapple_first_color"
                        android:drawableRight="@drawable/flag_icon"
                        android:outlineSpotShadowColor="@color/paneapple_second_color"
                        />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:hint="Age"
                    android:textColorHint="@color/black_color"
                    android:fontFamily="@font/montserrat_regular"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_33sdp"
                        android:textColorHint="@color/black_color"
                        android:scrollbars="vertical"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/_12ssp"
                        android:paddingRight="@dimen/_5ssp"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:id="@+id/tutor_signup_registration_age_id"
                        android:backgroundTint="@color/paneapple_first_color"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:drawableRight="@drawable/age_icon"
                        android:outlineSpotShadowColor="@color/paneapple_second_color"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@color/white_color"
            android:fontFamily="@font/montserrat_bold"
            android:text="Register"
            android:textAllCaps="false"
            android:id="@+id/registration_tutor_btn_id"

            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/white_color"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="@dimen/_12ssp"
        android:id="@+id/tutor_signup_registration_next_id"
        android:fontFamily="@font/montserrat_light"
        />
    </LinearLayout>
    </ScrollView>

