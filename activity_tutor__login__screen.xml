<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/white_color"
    tools:context="com.paneapple.paneapple.tutor.Tutor_Login_Screen">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/paneapple_first_color"
            app:layout_scrollFlags="scroll|enterAlways">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tutor Login"
                android:textColor="@color/paneapple_third_color"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/_55ssp"
                android:layout_gravity="center_horizontal"
                />

        </android.support.v7.widget.Toolbar>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_290sdp"
        android:orientation="vertical"
        android:background="@drawable/gradient_color_background"
        >
    </RelativeLayout>
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            card_view:cardBackgroundColor="@color/white_color"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            card_view:cardUseCompatPadding="true"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            >
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:hint="Email"
                android:textColorHint="@color/black_color"
                android:fontFamily="@font/montserrat_regular"

                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:textColorHint="@color/black_color"
                    android:scrollbars="vertical"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textColor="@color/black_color"
                    android:inputType="textEmailAddress"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingRight="@dimen/_5ssp"
                    android:backgroundTint="@color/paneapple_first_color"
                    android:drawableRight="@drawable/email_small_icon"
                    android:outlineSpotShadowColor="@color/paneapple_second_color"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_70sdp"
                android:hint="Password"
                android:fontFamily="@font/montserrat_regular"
                android:textColorHint="@color/black_color"
                android:focusable="false"
                >
                <com.subhrajyoti.passwordview.PasswordView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36ssp"
                    android:textColorHint="@color/paneapple_third_color"
                    android:textColor="@color/black_color"
                    android:paddingLeft="@dimen/_10ssp"
                    android:textSize="@dimen/_12ssp"
                    android:inputType="textPassword"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:paddingRight="@dimen/_10ssp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    app:eyeTint="@color/paneapple_first_color"
                    android:id="@+id/password_login_id"
                    app:passwordToggleTint="@color/paneapple_first_color"
                    android:backgroundTint="@color/paneapple_first_color"
                    />

            </android.support.design.widget.TextInputLayout>

        </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_350sdp"
        >
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="@dimen/_10sdp"
        android:textAllCaps="false"
        android:textColor="@color/white_color"
        android:background="@drawable/gradient_color_background"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:fontFamily="@font/montserrat_light"
        android:textStyle="bold"
        android:textSize="@dimen/_12ssp"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account ?"
            android:textColor="@color/black_color"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/_5sdp"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:id="@+id/donthave_account_id"
            android:fontFamily="@font/montserrat_light"
            android:layout_marginRight="@dimen/_20sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:textColor="@color/paneapple_first_color"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_35sdp"
            android:fontFamily="@font/montserrat_light"
            android:id="@+id/sign_up"
            />
        </RelativeLayout>
    </LinearLayout>


</FrameLayout>